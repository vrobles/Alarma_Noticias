<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.robles.mobi.alarma_noticias" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Base.Theme" >
        <activity
            android:name=".actividades.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".actividades.Ajustes"
            android:label="Ajustes"/>

        <activity android:name=".actividades.ConfigurarActivity"
            android:label="@string/title_activity_configurar"
            android:parentActivityName=".actividades.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".actividades.MainActivity" />
        </activity>

        <activity
            android:name=".actividades.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName=".actividades.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".actividades.MainActivity" />
        </activity>

    </application>

</manifest>
